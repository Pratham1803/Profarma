<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHome">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/dark_blue"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/inria_sans"
            android:paddingStart="10dp"
            android:text="ProFarma Admin"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingEnd="10dp"
            android:src="@drawable/logout" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/linearMenus"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="35dp"
        android:columnCount="2"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:id="@+id/layoutAddEmployee"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:elevation="15dp"
            android:gravity="center"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:background="@drawable/menu_shape"
            style="@style/MenuBox">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_user" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add\n Employee"
                android:textAlignment="center"
                android:fontFamily="@font/concert_one"
                android:textSize="24dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAddProduct"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:elevation="15dp"
            android:gravity="center"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:background="@drawable/menu_shape"
            style="@style/MenuBox">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/products" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add\n Product"
                android:textAlignment="center"
                android:fontFamily="@font/concert_one"
                android:textSize="24dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutEmployeeDetails"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:elevation="15dp"
            android:gravity="center"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:background="@drawable/menu_shape"
            style="@style/MenuBox">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/employees" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee\nDetails"
                android:textAlignment="center"
                android:fontFamily="@font/concert_one"
                android:textSize="24dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutProductDetails"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:elevation="15dp"
            android:gravity="center"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:background="@drawable/menu_shape"
            style="@style/MenuBox">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/all_products" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product\nDetails"
                android:textAlignment="center"
                android:fontFamily="@font/concert_one"
                android:textSize="24dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAdmin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:elevation="15dp"
            android:gravity="center"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:background="@drawable/menu_shape"
            style="@style/MenuBox">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/admin" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin\nProfile"
                android:textAlignment="center"
                android:fontFamily="@font/concert_one"
                android:textSize="24dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutSell"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:elevation="15dp"
            android:gravity="center"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:background="@drawable/menu_shape"
            style="@style/MenuBox">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sel" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sell\nProduct"
                android:textAlignment="center"
                android:fontFamily="@font/concert_one"
                android:textSize="24dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>